#!/bin/sh

wall_dir="$HOME/pix/wall"

if [ -z "$1" ]; then
    wall="$(find "$wall_dir" -type f -name "*.jpg" -o -name "*.png" | shuf -n1)"
else
    wall="$1"
fi

printf "Changing wallpaper..."
convert "$wall" "$HOME/.local/share/bg.jpg"
xwallpaper --zoom "$HOME/.local/share/bg.jpg"
wal -c
wal -i "$HOME/.local/share/bg.jpg"
xdotool key super+F5
